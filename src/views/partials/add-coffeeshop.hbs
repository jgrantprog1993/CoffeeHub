<form class="box" action="/category/{{category._id}}/addCoffeeShop" method="POST">
  <label>Enter Coffee Shop Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
          <label class="label">Coffee Shop Name</label>
        <input class="input" type="text" pattern="[A-Za-z\s]+{1,20}" placeholder="Enter CoffeeShop Name" name="coffeeShopName">
      </div>
      <div class="field">
          <label class="label">Latitude</label>
        <input class="input" type="number" step="0.0001" maxlength="10" min="-90.0000" max="90.0000" placeholder="Enter Lat" name="lat">
      </div>
      <div class="field">
        <label class="label">Longitude</label>
        <input class="input" type="number" step="0.0001" maxlength="10" min="-180.0000" max="180.0000"placeholder="Enter Lng" name="lng">
      </div>
      <div class="field">
          <label class="label">Descrip.</label>
          <div class="control">
              <textarea class="textarea is-hovered" placeholder="Description" type="text" pattern="[A-Za-z\s]+{1,20}" name="description"></textarea>
          </div>
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Coffee Shop</button>
</form>
